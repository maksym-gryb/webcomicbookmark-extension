{
    "manifest_version": 2,
    "name": "Webcomic Tracker",
    "description": "Track your progress through webcomics",
    "version": "1.0",
    "applications": {
        "gecko": {
            "strict_min_version": "54.0a1"
        }
    },
    "sidebar_action": {
        "default_icon": "icons/star.png",
        "default_title": "Webcomic Tracker",
        "default_panel": "sidebar/panel.html"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "commands": {
        "toggle-feature": {
            "suggested_key": {
                "default": "Ctrl+1"
            }
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icons/wct-32.png",
        "theme_icons": [
            {
                "light": "icons/wct-32.png",
                "dark": "icons/wct-32.png",
                "size": 32
            }
        ],
        "default_title": "Webcomic Tracker",
        "default_popup": "popup/popup.html"
    },
    "web_accessible_resources": [
        "beasts/frog.jpg",
        "beasts/turtle.jpg",
        "beasts/snake.jpg"
    ]
}
