{
    "manifest_version": 2,
    "name": "Webcomic Tracker",
    "description": "Track your progress through webcomics",
    "version": "1.0",
    "applications": {
        "gecko": {
            "strict_min_version": "54.0a1"
        }
    },
    "sidebar_action": {
        "default_icon": "icons/star.png",
        "default_title": "WB Tracker",
        "default_panel": "sidebar/panel.html"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Ctrl+;"
            }
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}
